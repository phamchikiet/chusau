{
  "name": "site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/site/src",
  "prefix": "website",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "allowedCommonJsDependencies": [
          "@cordobo/qrcode"
        ],
        "outputPath": "dist/apps/site",
        "index": "apps/site/src/index.html",
        "main": "apps/site/src/main.ts",
        "polyfills": "apps/site/src/polyfills.ts",
        "tsConfig": "apps/site/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/site/src/favicon.ico",
          "apps/site/src/assets"
        ],
        "styles": [
          "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
          "apps/site/src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "200kb",
              "maximumError": "400kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/site/src/environments/environment.ts",
              "with": "apps/site/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "site:build:production"
        },
        "development": {
          "browserTarget": "site:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "proxyConfig": "apps/site/proxy.conf.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "site:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/site/**/*.ts",
          "apps/site/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/site"
      ],
      "options": {
        "jestConfig": "apps/site/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "angular-cli-ghpages:deploy",
      "options": {
        "baseHref": "https://ghtsolutions.github.io/quanlycsvc/"
      }
    }
  },
  "tags": []
}
